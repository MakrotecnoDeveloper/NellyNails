@model List<Producto>

<table class="table">
    <thead>
        <tr>
            <th>Código</th>
            <th>Descripcion</th>
            <th>Valor Neto</th>
            <th>Valor de Venta</th>
            <th>Cantidad</th>
            <th>Categoría</th>
            <th>Empresa</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Cod_Producto</td>
                <td>@producto.NombreProducto</td>
                <td>@producto.ValorNetoProducto</td>
                <td>@producto.ValorVentaProducto</td>
                <td>@producto.CantidadProducto</td>
                <td>@producto.Categoria</td>
                <td>@producto.ID_Empresa</td>
                <td>@producto.Estado</td>
                <td>
                    <a asp-controller="Producto" asp-action="Editar" asp-route-id="@producto.Cod_Producto" title="Editar">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a asp-controller="Producto" asp-action="Eliminar" asp-route-id="@producto.Cod_Producto" title="Eliminar">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                    <a asp-controller="Producto" asp-action="VisualizarProducto" asp-route-id="@producto.Cod_Producto" title="Visualizar">
                        <i class="fas fa-eye"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>