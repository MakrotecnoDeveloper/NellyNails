@model List<Plataformas>
@{
    ViewData["Title"] = "formPlataforma";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cedulaClaim = User.FindFirst("Cedula")?.Value;
    int cedula = int.Parse(cedulaClaim);
}

<div class="content-wrapper">
    <div class="container mt-5">
        <h2 class="mb-4">Formulario de Registro</h2>
        <form role="form" asp-controller="Producto" asp-action="insertPlataforma" method="POST">
            <div class="form-group">
                <label for="plataforma">Plataforma</label>
                <select class="form-control" id="idPlataforma" name="idPlataforma">
                    <option>Selecciona la plataforma</option>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var plataforma in Model)
                        {
                            <option value="@plataforma.IdPlataforma">@plataforma.NombrePltf</option>
                        }
                    }
                    else
                    {
                        <option value="">No hay plataformas disponibles</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="descripcion">Descripción</label>
                <input type="text" class="form-control" id="descripcion" name="descripcion" required>
            </div>
            <div class="form-group">
                <label for="valorventa">Valor Venta</label>
                <input type="number" class="form-control" id="valorventa" name="valorventa" required>
            </div>
            <div class="form-group">
                <label for="valorneto">Valor Neto</label>
                <input type="number" class="form-control" id="valorneto" name="valorneto" required>
            </div>
            <div class="form-group">
                <label for="fechaInipago">Fecha Inicio Pago</label>
                <input type="datetime-local" class="form-control" id="fechaInipago" name="fechaInipago" required>
            </div>
            <div class="form-group">
                <label for="fechaFinpago">Fecha Fin Pago</label>
                <input type="datetime-local" class="form-control" id="fechaFinpago" name="fechaFinpago" required>
            </div>
            <div class="form-group">
                <label for="cantidad">Cantidad</label>
                <input type="number" class="form-control" id="cantidad" name="cantidad" required>
            </div>
            <div class="form-group">
                <label for="correo">Correo</label>
                <input type="email" class="form-control" id="correo" name="correo" required>
            </div>
            <div class="form-group">
                <label for="contrasena">Contraseña</label>
                <input type="password" class="form-control" id="contrasena" name="contrasena" required>
            </div>
            <div class="form-group">
                <label for="cedula">Cédula</label>
                <input type="number" class="form-control" id="cedula" name="cedula" value="@cedula">
            </div>
            <div class="form-group">
                <label for="estado">Estado</label>
                <input type="number" class="form-control" id="estado" name="estado" required>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
    </div>
</div>

