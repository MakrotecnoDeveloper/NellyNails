@model List<Ganancias>
@{
    ViewData["Title"] = "VisualizarGanancia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Tabla de Ganancias</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        @if (Model != null && Model.Count > 0)
                        {
                            <table id="gananciasTable" class="table table-bordered table-striped table-responsive">
                                <thead>
                                    <tr>
                                        <th>ID Ganancias</th>
                                        <th>Ganancia Makrotecno</th>
                                        <th>Ganancia Total</th>
                                        <th>Ganancia Maria</th>
                                        <th>Ganancia Victor</th>
                                        <th>Ganancia Teresa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ganancia in Model)
                                    {
                                        <tr>
                                            <td>@ganancia.Id_ganancias</td>
                                            <td>@ganancia.GananciaMakrotecno</td>
                                            <td>@ganancia.GananciaTotal</td>
                                            <td>@ganancia.GananciaMaria</td>
                                            <td>@ganancia.GananciaVictor</td>
                                            <td>@ganancia.GananciaTeresa</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>No hay datos de ganancias para mostrar.</p>
                        }
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
