@{
    ViewData["Title"] = "Agregar Factura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header py-4">
        <div class="container">
            <h1 class="text-center">Crear Nueva Factura</h1>
            <p class="text-center text-muted">Complete la información para generar una nueva factura</p>
        </div>
    </section>
    <section class="content">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="card shadow-lg">
                        <div class="card-header bg-primary text-white">
                            <h3 class="card-title text-center mb-0">Formulario de Factura</h3>
                        </div>
                        <div class="card-body">
                            <form role="form" method="post" asp-controller="Pedido" asp-action="CrearFactura" id="formCrearFactura">
                                <!-- Cédula del Cliente -->
                                <div class="mb-3">
                                    <label for="cedula_cliente" class="form-label">Cédula del Cliente</label>
                                    <input type="text" class="form-control" id="cedula_cliente" name="cedula_cliente" placeholder="Ingrese la cédula del cliente" required>
                                </div>
                                <!-- Cédula del Empleado -->
                                <div class="mb-3">
                                    <label for="cedula_empleado" class="form-label">Cédula del Empleado</label>
                                    <input type="text" class="form-control" id="cedula_empleado" name="cedula_empleado" value="1234193470" readonly>
                                </div>
                                <!-- Estado de la Factura -->
                                <div class="mb-3">
                                    <label for="estado" class="form-label">Estado de la Factura</label>
                                    <input type="text" class="form-control" id="estado" name="estado" value="Proceso" readonly>
                                </div>
                                <!-- Tipo de Factura -->
                                <div class="mb-3">
                                    <label for="tpfactura" class="form-label">Tipo de Factura</label>
                                    <select class="form-select" id="tpfactura" name="tpfactura" required>
                                        <option value="Venta">Venta</option>
                                        <option value="Compra">Compra</option>
                                    </select>
                                </div>
                                <!-- Botón de Enviar -->
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg" id="btnCrearFactura">
                                        <i class="fas fa-save me-2"></i> Guardar Factura
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="card-footer text-center text-muted">
                            Todos los campos son obligatorios.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>