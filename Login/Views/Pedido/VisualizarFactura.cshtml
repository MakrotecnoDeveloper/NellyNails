@model List<Ventas>
@{
    ViewData["Title"] = "VisualizarFactura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Tabla de Ventas</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        @if (Model != null && Model.Count > 0)
                        {
                            <table id="ventasTable" class="table table-bordered table-striped table-responsive">
                                <thead>
                                    <tr>
                                        <th>ID Venta</th>
                                        <th>Venta Total</th>
                                        <th>Venta Makrotecno</th>
                                        <th>Neto Makrotecno</th>
                                        <th>Venta Recargas</th>
                                        <th>Venta Tienda</th>
                                        <th>Venta Pasivos</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ventas in Model)
                                    {
                                        <tr>
                                            <td>@ventas.Id_venta</td>
                                            <td>@ventas.VentaTotal</td>
                                            <td>@ventas.VentaMakrotecno</td>
                                            <td>@ventas.NetoMakrotecno</td>
                                            <td>@ventas.VentaRecargas</td>
                                            <td>@ventas.VentaTienda</td>
                                            <td>@ventas.VentaPasivos</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>No hay datos de ganancias para mostrar.</p>
                        }
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

