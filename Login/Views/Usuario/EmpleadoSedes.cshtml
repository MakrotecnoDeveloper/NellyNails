@model Plataforma.Models.EmpleadoSedeViewModel
@{
    ViewData["Title"] = "EmpleadoSedes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper justify-content-center">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card rounded-lg shadow-sm">
                    <div class="card-header bg-primary text-white">
                        Ingrese su Cédula
                    </div>
                    <div class="card-body">
                        <form id="cedulaForm" asp-action="ValidarCedula" asp-controller="Usuario" method="POST">
                            <div class="mb-3">
                                <label for="cedula" class="form-label">Cédula:</label>
                                <input type="number" class="form-control" id="cedula" name="cedula" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Validar</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card rounded-lg shadow-sm">
                    <div class="card-header bg-primary text-white">
                        Ingrese su Cédula
                    </div>
                    <div class="card-body">
                        <div class="container">
                          <div class="table-responsive">
                            <h3>Sedes</h3>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Nombre Empleado</th>
                                        <th>Cedula Empleado</th>
                                        <th>Nombre Cargo</th>
                                        <th>Nombre Sede</th>
                                        <th>Nombre Empresa</th>
                                        <th>Acciones</th>
                                        <!-- Otros campos -->
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.EmpleadoConSedeYEmpresas)
                                    {
                                        <tr>
                                            <td>@item.Empleado.Nombre</td>
                                            <td>@item.Empleado.Cedula</td>
                                            <td>@item.TipoCargo.NombreCargo</td>
                                            <td>@item.Sede?.NombreSede</td>
                                            <td>@item.Empresa?.Nombre</td>
                                            <td><a asp-action="EliminarEmpleadoSede" asp-controller="Usuario" asp-route-cedula="@item.Empleado.Cedula">Eliminar</a></td>
                                            <!-- Otros campos -->
                                        </tr>
                                    }
                                </tbody>
                            </table>
                          </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

