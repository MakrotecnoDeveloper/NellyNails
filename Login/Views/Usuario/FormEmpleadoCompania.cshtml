@model List<Empresas>
@{
    ViewData["Title"] = "FormEmpleadoCompania";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-3 mb-5 bg-white rounded">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Formulario de Sede</h2><br />
                    <form asp-action="InsertarEE" asp-controller="Usuario" method="post">
                        <div class="mb-3">
                            <label for="Cedula" class="form-label">Cédula</label>
                            <input type="number" class="form-control" id="Cedula" name="cedula" value="@ViewBag.cedula" required>
                        </div>
                        <div class="mb-3">
                            <label for="idEmpresa" class="form-label">ID Empresa</label>
                            <select class="form-control" id="id_empresa" name="id_empresa" required>
                                <option value="">Seleccionar Empleado</option>
                                @foreach (var empresa in Model)
                                {
                                    <option value="@empresa.Id_empresa">@empresa.Nombre</option>
                                }
                            </select>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Crear Relacion</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

